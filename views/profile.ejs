    </div>
  </div>

  <script>
    // Preview avatar before upload (optional enhancement)
    document.getElementById('avatar').addEventListener('change', function(e) {
      const file = e.target.files[0];
      if (file) {
        // Show file name
        console.log('Selected file:', file.name);
